<div class="row">
  <div class="col-md-8 pull-left">
    <%
      a_sf = {:search_field => 'annotations'}
      a_local_params = add_facet_params('manuscript_facet', document['title_display'], source_params=a_sf)
      a_path = search_action_path(a_local_params)
      t_sf = {:search_field => 'transcriptions'}
      t_local_params = add_facet_params('manuscript_facet', document['title_display'], source_params=t_sf)
      t_path = search_action_path(t_local_params)
    %>
    <!-- related annotations -->
    <% a_class = 'noresult' %>
    <% if @related_annotations.has_key?( document['druid']) && @related_annotations[document['druid']] > 0 %>
        <% a_class = 'result' %>
    <% end %>
    <a href="<%=a_path%>" class="btn btn-sm <%=a_class%>">
      <span class="glyphicon glyphicon-tag" aria-hidden="true"></span> Annotations
    </a>
    <!-- related transcriptions -->
    <% t_class = 'noresult' %>
    <% if @related_transcriptions.has_key?( document['druid']) && @related_transcriptions[document['druid']] > 0 %>
        <% t_class = 'result' %>
    <% end %>
    <a href="<%=t_path%>" class="btn btn-sm <%=t_class%>">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Transcriptions
    </a>
  </div>
  <div class="col-md-4 pull-right">
    <!-- bookmark control -->
    <%= render partial: 'shared/bookmark_control', locals: {:document => document}  %>
  </div>
</div>