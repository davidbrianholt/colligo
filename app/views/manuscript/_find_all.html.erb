<div class="col-sm-4 col-md-4 col-lg-12">
  <div class="panel panel-default folio-panel">
    <div class="panel-heading results-header">
      <h3 class="panel-title">Manuscript</h3>
    </div>
    <div class="panel-body">
      <dl>
        <dt>Find all...</dt>
        <dd>
          <!-- related annotations -->
          <% a_class = 'noresult-inverse' %>
          <% if @related_annotations > 0 %>
              <% a_class = 'result-inverse' %>
          <% end %>
          <a href="<%="#{path_for_facet('manuscript_facet', @document['title_display'])}&search_field=annotations"%>" class="btn btn-sm <%=a_class%>">
            <span class="glyphicon glyphicon-tag" aria-hidden="true"></span> Annotations
          </a>
        </dd>
        <dd>
          <!-- related transcriptions -->
          <% t_class = 'noresult-inverse' %>
          <% if @related_transcriptions > 0 %>
              <% t_class = 'result-inverse' %>
          <% end %>
          <a href="<%="#{path_for_facet('manuscript_facet', @document['title_display'])}&search_field=transcriptions"%>" class="btn btn-sm <%=t_class%>">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Transcriptions
          </a>
        </dd>
        <dt>...for this manuscript</dt>
      </dl>
    </div>
  </div>
</div>